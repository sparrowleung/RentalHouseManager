<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#22221111"
        android:layout_gravity="bottom"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/room_message_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/room_num"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textSize="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/room_time"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/intro_description"
                android:layout_toStartOf="@+id/room_timePick"
                android:layout_marginRight="3dp"
                android:layout_alignBottom="@+id/room_num"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:visibility="gone"
                />

            <ImageButton
                android:id="@+id/room_timePick"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/room_num"
                android:layout_marginRight="17dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/room_notify_info"
                android:text="修改房间信息"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_toStartOf="@+id/room_notify_money"
                android:layout_alignTop="@+id/room_num"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/room_notify_money"
                android:text="修改费用信息"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/room_num"
                android:layout_marginRight="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:visibility="gone"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/room_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/room_progressbar"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"/>

        <ExpandableListView
            android:id="@+id/room_message_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
        </ExpandableListView>
    </RelativeLayout>
</LinearLayout>